<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
  
  <!--::::::::::::::::::::::::::::::: Template :::::::::::::::::::::::::::::::-->
   <bean id ="abstractService" class="com.blackstar.services.AbstractService">
   </bean>
   
   <!--::::::::::::::::::::::::::::::: Commons :::::::::::::::::::::::::::::::-->
  <bean id="userDomainService" class="com.blackstar.services.impl.UserDomainServiceImpl" parent="abstractService">
      <property name="dao" ref="userDomainDAO" />
  </bean>
  
  <bean id="googleDriveService" class="com.blackstar.services.impl.GoogleDriveServiceImpl" parent="abstractService" init-method="init">
    <property name="serviceAccountId" value="313287673617@developer.gserviceaccount.com"/>
    <property name="serviceAccountUser" value="portal-servicios@gposac.com.mx"/>
  </bean>
  
  
  <!--::::::::::::::::::::::::::::::: Service Controller :::::::::::::::::::::::::::::::-->
  <bean id="securityService" class="com.blackstar.services.impl.SecurityServiceImpl" parent="abstractService" init-method="init">
      <property name="secretsPath" value="#{ systemProperties['com.google.appengine.runtime.environment'] == 'Production'? 'config/prod_client_secrets.json' : 'config/dev_client_secrets.json' }" 
      />
      <property name="authorities">
		<list value-type="java.lang.String" >
		    <value>https://www.googleapis.com/auth/drive.file</value>
		    <value>https://www.googleapis.com/auth/drive</value>
		    <value>https://www.googleapis.com/auth/userinfo.email</value>
		    <value>https://www.googleapis.com/auth/userinfo.profile</value>
		</list>
	  </property>
  </bean>
  
  <bean id="dashboardService" class="com.blackstar.services.impl.DashboardServiceImpl" parent="abstractService">
      <property name="dao" ref="dashboardDAO" />
  </bean>
  
  <bean id="serviceOrderService" class="com.blackstar.services.impl.ServiceOrderServiceImpl" parent="abstractService">
      <property name="dao" ref="serviceOrderDAO" />
      <property name="typeDao" ref="serviceTypeDAO" />
  </bean>
  
  <bean id="reportService" class="com.blackstar.services.impl.ReportServiceImpl" parent="abstractService"/>
 
  <bean id="gmService" class="com.blackstar.services.GmailService" parent="abstractService">
    <property name="mailSender" ref="mailSender" />
  </bean>

  <bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
    <property name="host" value="smtp.gmail.com" />
    <property name="port" value="587" />
    <property name="username" value="portal-servicios@gposac.com.mx" />
    <property name="password" value="SACPORTAL" />

    <property name="javaMailProperties">
     <props>
         <prop key="mail.smtp.auth">true</prop>
         <prop key="mail.smtp.starttls.enable">true</prop>
      </props>
    </property>
  </bean>
  
  <bean id="offlineOSService" class="com.blackstar.services.impl.OfflineOSServiceImpl" parent="abstractService">
    <property name="soService" ref="serviceOrderService" />
    <property name="rpService" ref="reportService" />
  </bean>
  
  <bean id="customerService" class="com.blackstar.services.impl.CustomerServiceImpl" parent="abstractService">
      <property name="dao" ref="customerDAO" />
  </bean>
  
  <bean id="warrantProjectService" class="com.blackstar.services.impl.WarrantProjectServiceImpl" parent="abstractService">
      <property name="dao" ref="warrantProjectDAO" />
  </bean>
  
  <bean id="salesService" class="com.blackstar.services.impl.SalesServiceImpl" parent="abstractService">
      <property name="dao" ref="warrantProjectDAO" />
  </bean>
  
  <bean id="clientService" class="com.codex.service.impl.ClientServiceImpl" parent="abstractService">
      <property name="dao" ref="clientDAO" />
  </bean>
  
  <bean id="projectService" class="com.codex.service.impl.ProjectServiceImpl" parent="abstractService">
      <property name="dao" ref="projectDAO" />
      <property name="uDAO" ref="userDAO" />
      <property name="cDAO" ref="clientDAO" />
      <property name="pdfService" ref="codexPDFService" />
      <property name="gmService" ref="gmService" />
      <property name="gdService" ref="googleDriveService" />
      <property name="priceProposalService" ref="priceProposalService" />
  </bean>
  
  <bean id="codexDashboardService" class="com.codex.service.impl.DashboardServiceImpl" parent="abstractService">
      <property name="dao" ref="codexDashboardDAO" />
  </bean>
  
  <bean id="codexPDFService" class="com.codex.service.impl.PDFReportServiceImpl" parent="abstractService"/>

  <bean id="priceProposalService" class="com.codex.service.impl.PriceProposalServiceImpl" parent="abstractService">
      <property name="dao" ref="priceProposalDAO" />
  </bean>
</beans>
