<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-2.5.xsd
                           http://www.springframework.org/schema/aop
                           http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
                           http://www.springframework.org/schema/tx
                           http://www.springframework.org/schema/tx/spring-tx-2.5.xsd">

      <bean id="dsBlackStartDev" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">  
             <property name="driverClassName" value="com.mysql.jdbc.Driver"/>  
             <property name="url" value="jdbc:mysql://localhost:3306/blackstarDb"/>  
             <property name="username" value="root"/>  
             <property name="password" value=""/>  
       </bean>
       
       <bean id="dsBlackStartProd" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">  
             <property name="driverClassName" value="com.mysql.jdbc.GoogleDriver"/>  
             <property name="url" value="jdbc:google:rdbms://salej1-blackstar-dev:salej1-blackstar-dev/blackstarDb"/>  
       </bean>
       
       <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
             <property name="dataSource" ref="#{ systemProperties['com.google.appengine.runtime.environment'] == 'Production'? 'dsBlackStartProd' : 'dsBlackStartDev' }"/>
       </bean>
       
       <bean id="dashboardDAO" class="com.blackstar.db.dao.impl.DashboardDAOImpl">
         <property name="jdbcTemplate" ref="jdbcTemplate" />
       </bean>
       
       <bean id="serviceOrderDAO" class="com.blackstar.db.dao.impl.ServiceOrderDAOImpl">
         <property name="jdbcTemplate" ref="jdbcTemplate" />
       </bean>
              
       <bean id="userDAO" class="com.blackstar.db.dao.impl.UserDaoImpl">
         <property name="jdbcTemplate" ref="jdbcTemplate" />
       </bean>

</beans>