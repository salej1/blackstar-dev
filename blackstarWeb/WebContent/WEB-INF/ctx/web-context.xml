<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
				            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
  				            http://www.springframework.org/schema/mvc
                            http://www.springframework.org/schema/mvc/spring-mvc.xsd">

	<!--:::::::::::::::::::::::::: MVC Annnotations :::::::::::::::::::::::::: -->
	<mvc:annotation-driven />

	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/**" />
			<mvc:exclude-mapping path="/security/**" />
			<mvc:exclude-mapping path="/offlineOS/save.do" />
			<bean class="com.blackstar.web.interceptor.HttpInterceptor">
				<property name="service" ref="securityService" />
			</bean>
		</mvc:interceptor>
	</mvc:interceptors>


	<!--:::::::::::::::::::::::::::: JSP View Resolver :::::::::::::::::::::::::::: -->
	<bean id="jspViewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="viewClass"
			value="org.springframework.web.servlet.view.JstlView" />
		<property name="prefix" value="/" />
		<property name="suffix" value=".jsp" />
	</bean>

	<!--::::::::::::::::::::::::::::::: Template ::::::::::::::::::::::::::::::: -->
	<bean id="abstractController" class="com.blackstar.web.AbstractController">
		<property name="udService" ref="userDomainService" />
		<property name="gdService" ref="googleDriveService" />
		<property name="secService" ref="securityService" />
	</bean>

	<!--::::::::::::::::::::::::::::::: Controllers ::::::::::::::::::::::::::::::: -->
	<bean id="securityController" class="com.blackstar.web.controller.SecurityController"
		parent="abstractController" />

	<bean class="com.blackstar.web.controller.DashboardController"
		parent="abstractController">
		<property name="service" ref="dashboardService" />
	</bean>

	<bean class="com.blackstar.web.controller.ServiceOrderController"
		parent="abstractController">
		<property name="service" ref="serviceOrderService" />
		<property name="rrService" ref="reportService" />
	</bean>

	<bean class="com.blackstar.web.controller.UpsServiceController"
		parent="abstractController">
		<property name="service" ref="serviceOrderService" />
		<property name="rpService" ref="reportService" />
		<property name="gmService" ref="gmService" />
	</bean>
	<bean class="com.blackstar.web.controller.PlainServiceController"
		parent="abstractController">
		<property name="service" ref="serviceOrderService" />
		<property name="rpService" ref="reportService" />
		<property name="gmService" ref="gmService" />
	</bean>
	<bean class="com.blackstar.web.controller.EmergencyPlantServiceController"
		parent="abstractController">
		<property name="service" ref="serviceOrderService" />
		<property name="rpService" ref="reportService" />
		<property name="gmService" ref="gmService" />
	</bean>
	<bean class="com.blackstar.web.controller.BatteryServiceController"
		parent="abstractController">
		<property name="service" ref="serviceOrderService" />
		<property name="rpService" ref="reportService" />
		<property name="gmService" ref="gmService" />
	</bean>
	<bean class="com.blackstar.web.controller.AirCoServiceController"
		parent="abstractController">
		<property name="service" ref="serviceOrderService" />
		<property name="rpService" ref="reportService" />
		<property name="gmService" ref="gmService" />
	</bean>
	<bean class="com.blackstar.web.controller.OfflineOSController"
		parent="abstractController">
		<property name="service" ref="offlineOSService" />
	</bean>
	<bean class="com.blackstar.web.controller.ServiceOrdersController"
		parent="abstractController">
		<property name="service" ref="serviceOrderService" />
	</bean>
	<bean class="com.blackstar.web.controller.ReportController"
		parent="abstractController">
		<property name="urlPreffix"
			value="https://docs.google.com/a/gposac.com.mx/file/d/" />
		<property name="urlSufix" value="/edit" />
	</bean>
	<bean class="com.blackstar.web.controller.CustomerController"
		parent="abstractController">
		<property name="customerService" ref="customerService" />
	</bean>
	<bean class="com.blackstar.web.controller.WarrantProjectController"
		parent="abstractController">
		<property name="warrantProjectService" ref="warrantProjectService" />
	</bean>
	<bean class="com.blackstar.web.controller.RequisitionController" parent="abstractController">
	    <property name="warrantProjectService" ref="warrantProjectService" />
	</bean>
	<bean class="com.blackstar.web.controller.SalesController" parent="abstractController">
	    <property name="service" ref="salesService" />
	</bean>
	
	<bean class="com.codex.web.controller.ClientController" parent="abstractController">
	    <property name="service" ref="clientService" />
	</bean>
	
	<bean class="com.codex.web.controller.ProjectController" parent="abstractController">
	    <property name="service" ref="projectService" />
	    <property name="cService" ref="clientService" />
	</bean>
	
	<bean class="com.codex.web.controller.DashboardController" parent="abstractController">
	    <property name="service" ref="codexDashboardService" />
	</bean>
	
	<bean class="com.codex.web.controller.PriceProposalController" parent="abstractController">
	    <property name="service" ref="priceProposalService" />
	</bean>
	<context:annotation-config />
</beans>
